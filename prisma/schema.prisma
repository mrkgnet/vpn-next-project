// prisma/schema.prisma

generator client {
  provider = "prisma-client-js" // اصلاح شد (قبلاً prisma-client بود)
  // output را حذف کردم تا در مسیر استاندارد node_modules ساخته شود
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  phoneNumber String  @unique
  otpCode     String?
  otpExpires  String?

  userWallet  Int      @default(0)
  usreAccount String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
